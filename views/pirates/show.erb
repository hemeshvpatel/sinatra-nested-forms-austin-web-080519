<h1>Pirates</h1>

  <h3>Name: <%= @pirate.name %></h3> <br>
  <h3>Weight: <%= @pirate.weight %> pounds</h3> <br>
  <h3>Height: <%= @pirate.height %> inches</h3> <br>

<h1>Ships</h1>
<% @ships.each do |ship| %>
    <h3>Name: <%= ship.name %></h3><br>
    <h3>Type: <%= ship.type %></h3><br>
    <h3>Booty: <%= ship.booty %></h3><br>
<% end %>